.image, .code
  position relative
  float left
  max-height 200px
  max-width 200px
  margin 20px
  img
    max-height 100%
    max-width 100%
  .remove
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    text-align center
    background rgba(100, 100, 100, .8)
    cursor pointer
    display: none
    .remove-label
      position absolute
      top 50%
      left 50%
      margin-top -12px
      margin-left -25px
      color white
  &:hover
    .remove
      display block

.add-file
  width 250px
  height 250px
  background #f6f6f6
  border 1px dashed #666
  border-radius 5px
  text-align: center
  padding-top: 100px
  box-sizing border-box


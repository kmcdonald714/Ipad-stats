.deck
  margin: auto
  .card
    position relative
    margin-bottom: 20px
    border-radius 5px
    border 1px solid #e0e0e0
    .image-element
      img
        width 100%
        height 100%
    .text-element
      position absolute
      left 0
      top 0
      display table
      width 100%
      height 100%
      .text
        display: table-cell
        vertical-align: middle
        text-align: center

        box-sizing border-box

        font-family: gotham, helvetica
        white-space: pre-wrap

.view-decks
  .deck
    display inline-block
    width 400px
    height 400px
    margin 20px
    border 1px solid #a0a0a0
    border-radius 5px
    img
      width 400px
      height 400px
